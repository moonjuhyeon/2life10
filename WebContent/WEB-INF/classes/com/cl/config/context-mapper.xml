<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

	<!-- DB mapper 관리 -->

	<!-- SqlSession setup for MyBatis Database Layer -->
	<bean id="sqlSession" class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="dataSource" ref="dataSource" />
		<property name="configLocation" value="classpath:/com/cl/persistance/sqlmap/sql-mapper-config.xml" />
		<property name="mapperLocations" value="classpath:/com/cl/persistance/sqlmap/mapper/*.xml" />
	</bean>

	<!-- MapperConfigurer setup for MyBatis Database Layer with @Mapper("deptMapper") in DeptMapper Interface -->
 	<bean class="com.cl.config.MapperConfigurer">
		<property name="basePackage" value="com.cl.persistance.mapper" />
	</bean>
	
	<bean id="sqlSessionForMS" class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="dataSource" ref="dataSourceForMS" />
		<property name="configLocation" value="classpath:/com/cl/persistance/sqlmapForMS/sql-mapperForMS-config.xml" />
		<property name="mapperLocations" value="classpath:/com/cl/persistance/sqlmapForMS/mapperForMS/*.xml" />
	</bean>

 	<bean class="com.cl.config.MapperConfigurerForMS">
		<property name="basePackage" value="com.cl.persistance.mapperForMS" />
	</bean>
</beans>